{
  "name": "armadio-digitale",
  "version": "1.0.0",
  "main": "node_modules/expo/AppEntry.js",
  "scripts": {
    "start": "expo start",
    "start:clear": "expo start --clear",
    "start:tunnel": "expo start --tunnel",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "ios:community": "EXPO_USE_COMMUNITY_AUTOLINKING=1 expo run:ios",
    "web": "expo start --web",
    "clean": "rm -rf node_modules && rm -f package-lock.json && npm install --legacy-peer-deps",
    "purge": "git clean -fdx && npm install --legacy-peer-deps",
    "audit:fix": "npm audit fix || true",
    "audit:fix:force": "npm audit fix --force || true",
    "restore:firebase": "node scripts/restore-firebase-config.js",
    "eas-build-post-install": "node scripts/restore-firebase-config.js",
    "relocate": "node scripts/relocate-project.js",
    "build:release": "cd android && .\\gradlew assembleRelease && cd .. && powershell -Command \"& \\\"$env:LOCALAPPDATA\\Android\\Sdk\\platform-tools\\adb.exe\\\" install -r android\\app\\build\\outputs\\apk\\release\\app-release.apk\"",
    "android:installRelease": "powershell -Command \"& \\\"$env:LOCALAPPDATA\\Android\\Sdk\\platform-tools\\adb.exe\\\" install -r android\\app\\build\\outputs\\apk\\release\\app-release.apk\"",
    "android:uninstall": "powershell -Command \"& \\\"$env:LOCALAPPDATA\\Android\\Sdk\\platform-tools\\adb.exe\\\" uninstall com.armadiodigitale.app\"",
    "lint": "eslint . --ext .js,.jsx",
    "lint:fix": "eslint . --ext .js,.jsx --fix",
    "format": "prettier --write \"**/*.{js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,json,md}\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@invertase/react-native-apple-authentication": "^2.5.0",
    "@react-native-async-storage/async-storage": "^2.2.0",
    "@react-native-firebase/analytics": "^23.5.0",
    "@react-native-firebase/app": "^23.5.0",
    "@react-native-firebase/auth": "^23.5.0",
    "@react-native-firebase/firestore": "^23.5.0",
    "@react-native-firebase/storage": "^23.5.0",
    "@react-native-google-signin/google-signin": "^16.0.0",
    "@react-native-picker/picker": "2.11.1",
    "@react-navigation/bottom-tabs": "^7.7.3",
    "@react-navigation/native": "^7.1.19",
    "@react-navigation/native-stack": "^7.6.2",
    "@sentry/react-native": "~7.2.0",
    "dotenv": "^17.2.3",
    "expo": "~54.0.0",
    "expo-asset": "~12.0.9",
    "expo-camera": "~17.0.8",
    "expo-constants": "^18.0.10",
    "expo-dev-client": "~6.0.17",
    "expo-haptics": "^15.0.7",
    "expo-image-manipulator": "~14.0.7",
    "expo-image-picker": "~17.0.8",
    "expo-splash-screen": "~31.0.10",
    "expo-status-bar": "~3.0.8",
    "lodash.debounce": "^4.0.8",
    "lucide-react-native": "^0.552.0",
    "react": "19.1.0",
    "react-native": "0.81.5",
    "react-native-reanimated": "~4.1.1",
    "react-native-safe-area-context": "~5.6.0",
    "react-native-screens": "~4.16.0",
    "react-native-svg": "15.12.1",
    "react-native-worklets": "0.5.1"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/eslint-parser": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-flow": "^7.27.1",
    "@babel/preset-typescript": "^7.28.5",
    "@react-native-community/cli": "^20.0.2",
    "@react-native-community/cli-platform-android": "^20.0.2",
    "@react-native-community/cli-platform-ios": "^20.0.2",
    "@react-native/metro-config": "^0.82.1",
    "@testing-library/react-native": "^13.3.3",
    "babel-jest": "^30.2.0",
    "babel-preset-expo": "~54.0.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-native": "^5.0.0",
    "jest": "~29.7.0",
    "prettier": "^3.6.2",
    "react-test-renderer": "19.1.0"
  },
  "expo": {
    "install": {
      "exclude": []
    }
  },
  "overrides": {
    "undici": "6.21.2"
  }
}
